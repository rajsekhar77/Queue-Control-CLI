# =============================================================================
# queuectl environment configuration
# =============================================================================

# Directory to store SQLite DB (default: ./data)
QUEUECTL_DB_DIR=./data

# Full path to SQLite database file (optional; overrides DB_DIR)
# Example: /var/lib/queuectl/queue.db
#QUEUECTL_DB_PATH=

# Log level: error | warn | info | verbose | debug | silly
QUEUECTL_LOG_LEVEL=info

# Default maximum number of retries for new jobs
QUEUECTL_MAX_RETRIES=3

# Base for exponential backoff (used when retrying failed jobs)
# delay = base ** attempts
QUEUECTL_BACKOFF_BASE=2

# Worker poll interval (milliseconds)
# how often workers check DB for pending jobs
QUEUECTL_POLL_INTERVAL_MS=2000

# Lock timeout (milliseconds)
# If a job is locked longer than this, another worker can claim it
QUEUECTL_LOCK_TIMEOUT_MS=60000
